{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "PowerShell: Package Release",
			"type": "PowerShell",
			"request": "launch",
			"script": "${workspaceFolder}/_release.ps1",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Python: Launch Server with Local Client",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"server",
				"--run_client",
				"--verbose",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Server with Local Client (Debug)",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"server",
				"--run_client",
				"--verbose",
				"--debug",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Server Only",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"server",
				"--verbose",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Client from Localhost",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"player",
				"-wh",
				"localhost"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Client from IPv4 Address",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"player",
				"-wh",
				"192.168.50.69",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Client from IPv6 Address",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"player",
				"-wh",
				"2603:8000:1:3a97:81ec:e544:bb42:6975",
				//"2603-8000-1-3a97-d421-214a-2471-ac0c.ipv6-literal.net",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
	]
}