	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}/..",
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: Launch Server",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/_main.py",
			"cwd": "${workspaceFolder}/..",
			"args": [
				"server",
			],
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: Launch Server & Player",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/_main.py",
			"cwd": "${workspaceFolder}/..",
			"args": [
				"server",
				"--run_client",
			],
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: Launch Local Client",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/_main.py",
			"cwd": "${workspaceFolder}/..",
			"args": [
				"player",
				"-wh",
				"192.168.50.69"
			],
			"console": "integratedTerminal",
			"justMyCode": true,
		}
	]
}